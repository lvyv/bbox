{
    "name": "bbox",
    "displayName": "bbox",
    "description": "Embedded programming extension at vehicle terminal.",
    "icon": "bbox.jpg",
    "version": "0.0.3",
    "publisher": "awen",
    "repository": {
        "type": "git",
        "url": "https://github.com/lvyv/bbox.git"
    },
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:et.uploadApp",
        "onCommand:et.restartApp"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "et.uploadApp",
                "title": "upload app",
                "category": "et"
            },
            {
                "command": "et.restartApp",
                "title": "restart app",
                "category": "et"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "et.uploadApp"
                }
            ],
            "explorer/context": [
                {
                    "command": "et.uploadApp"
                },
                {
                    "command": "et.restartApp"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "bbox configuration",
            "properties": {
                "typescript.useCodeSnippetsOnMethodSuggest": {
                    "type": "boolean",
                    "default": false,
                    "description": "Complete functions with their parameter signature."
                },
                "typescript.tsdk": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Specifies the folder path containing the tsserver and lib*.d.ts files to use."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}